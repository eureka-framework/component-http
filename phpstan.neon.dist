parameters:
  phpVersion: 70400 # PHP 7.4 - Current minimal version supported
  level: max
  paths:
    - ./src
    - ./tests

  bootstrapFiles:
    - ./vendor/autoload.php

  ignoreErrors:
    -
        message: '`Parameter #2 \$middleware of class (.+?)RequestHandler constructor expects array.+`'
        path:    ./tests/RequestHandlerTest.php
