{
  "name": "eureka/component-http",
  "description": "PHP PSR-15 implementation.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Http\\": "./src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Http\\Tests\\": "./tests"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": ">=7.4.0",

    "psr/http-message": "^1.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^v0.6",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpunit/phpcov": "^8.2.0",
    "phpunit/phpunit": "^9.4.0",
    "squizlabs/php_codesniffer": "^3.5"
  }
}
